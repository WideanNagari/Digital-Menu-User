<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:layout_gravity="center"
    android:background="@color/red2"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Hereâ€™s\nyour first\nstep with \nus! "
                    android:textColor="@color/whiteTextColor" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/inverse_logo" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputEmail"
                        style="@style/parent"
                        android:layout_marginTop="20dp"
                        android:hint="@string/login_email_hint"
                        app:endIconMode="clear_text"
                        android:textColorHint="@color/red3"
                        app:startIconDrawable="@drawable/ic_mail"
                        app:startIconTint="@color/red3"
                        app:endIconTint="@color/red3">

                        <EditText
                            android:id="@+id/registerEmail"
                            style="@style/modifiedEditText"
                            android:backgroundTint="@color/colorPrimary"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputMobile"
                        style="@style/parent"
                        android:layout_marginTop="20dp"
                        android:hint="@string/login_telp_hint"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:counterEnabled="true"
                        app:counterMaxLength="13"
                        android:textColorHint="@color/red3"
                        app:prefixText="+62"
                        app:prefixTextColor="@color/pink1"
                        app:startIconTint="@color/red3"
                        app:endIconTint="@color/red3"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@drawable/ic_error">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/registerMobile"
                            style="@style/modifiedEditText"
                            android:backgroundTint="@color/colorPrimary"
                            android:inputType="number|phone"
                            android:maxLines="1"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPassword"
                        style="@style/parent"
                        android:layout_marginTop="20dp"
                        app:passwordToggleEnabled="true"
                        android:hint="@string/login_password_hint"
                        android:textColorHint="@color/red3"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/red3"
                        app:passwordToggleTint="@color/red3">

                        <EditText
                            android:id="@+id/registerPassword"
                            style="@style/modifiedEditText"
                            android:backgroundTint="@color/colorPrimary"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputConfPassword"
                        style="@style/parent"
                        android:layout_marginTop="20dp"
                        app:passwordToggleEnabled="true"
                        android:hint="Confirm Password"
                        android:textColorHint="@color/red3"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/red3"
                        app:passwordToggleTint="@color/red3">

                        <EditText
                            android:id="@+id/registerConfPassword"
                            style="@style/modifiedEditText"
                            android:backgroundTint="@color/colorPrimary"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/cirRegisterButton"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_rounded"
                        android:onClick="registrasi"
                        android:text="Sign Up"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />

                    <TextView
                        style="@style/parent"
                        android:layout_marginTop="20dp"
                        android:onClick="onLoginClick"
                        android:text="Already have an account?"
                        android:textAlignment="center"
                        android:textColor="@color/pink1"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="false"
        android:onClick="onLoginClick"
        android:src="@drawable/ic_back_img" />
</RelativeLayout>

