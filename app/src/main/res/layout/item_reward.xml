<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    android:elevation="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="1dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recycler_bg2">

        <ImageView
            android:id="@+id/image_Reward"
            android:layout_width="86dp"
            android:layout_height="95dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/badge" />

        <TextView
            android:id="@+id/nama_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Nama Reward / Promo"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_Reward"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/jenis_promo"
            android:layout_width="206dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:text="Reward / Promo"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/nama_reward"
            app:layout_constraintTop_toBottomOf="@+id/nama_reward" />

<!--        <ImageView-->
<!--            android:id="@+id/imageView6"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="8dp"-->
<!--            app:layout_constraintStart_toStartOf="@+id/jenis_promo"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/jenis_promo"-->
<!--            app:srcCompat="@drawable/ic_star" />-->

        <TextView
            android:id="@+id/jumlah_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="15"
            app:layout_constraintStart_toEndOf="@+id/image_Reward"
            app:layout_constraintTop_toBottomOf="@+id/jenis_promo" />

        <Button
            android:id="@+id/btn_claim_reward"
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:background="#3f9785"
            android:text="Claim"
            android:textColor="#212121"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
