<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomContainer"
    android:background="@drawable/round_container"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Check In"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputName"
        style="@style/parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:hint="Customer Name"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        android:textColorHint="@color/pink1"
        app:startIconTint="@color/pink1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Check_Name"
            style="@style/modifiedEditText"
            android:enabled="false"
            android:backgroundTint="@color/pink9"
            android:inputType="text"
            android:text="Widean"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPhone"
        style="@style/parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:hint="Customer Phone"
        app:startIconDrawable="@drawable/ic_phone"
        android:textColorHint="@color/pink1"
        app:startIconTint="@color/pink1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Check_Phone"
            style="@style/modifiedEditText"
            android:backgroundTint="@color/pink9"
            android:inputType="text"
            android:text="08123456789"
            android:enabled="false"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:hint="Table Number"
        app:endIconTint="@color/pink1"
        android:backgroundTint="@color/pink9"
        android:textColorHint="@color/pink1"
        app:passwordToggleDrawable="@null">

        <AutoCompleteTextView
            android:id="@+id/spinnerCheckin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputMobile"
        style="@style/parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:hint="Table Code"
        app:startIconDrawable="@drawable/ic_code"
        android:textColorHint="@color/pink1"
        app:startIconTint="@color/pink1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/kodeCheckIn"
            style="@style/modifiedEditText"
            android:backgroundTint="@color/pink9"
            android:inputType="text"
            android:text="D001"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/doCheckin"
        style="@style/loginButton"
        android:layout_width="144dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_bg"
        android:text="Review"
        app:initialCornerAngle="27dp"
        android:layout_gravity="right"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />
</LinearLayout>